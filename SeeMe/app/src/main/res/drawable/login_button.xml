<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#0081FF" />
            <gradient android:angle="-90" android:startColor="#0C41E8" android:endColor="#0CB5E8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#0081FF" />
            <solid android:color="#0CB5E8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#0081FF" />
            <gradient android:angle="-90" android:startColor="#0DFFF7" android:endColor="#0CB5E8" />
        </shape>
    </item>
</selector>