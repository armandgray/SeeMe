<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_item_border"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="@dimen/userImgSize"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armand_gray_placeholder" />

        <TextView
            android:id="@+id/tvOccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/software_engineer_placeholder" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="0dp"
        android:layout_height="@dimen/navbar_icon_size"
        android:layout_gravity="top|end"
        android:layout_marginTop="7dp"
        android:layout_weight="0.2"
        android:gravity="top|end"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_account_plus_white_48dp" />

</LinearLayout>